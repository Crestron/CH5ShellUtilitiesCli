{
  "name": "@crestron/ch5-shell-utilities-cli",
  "version": "0.0.6",
  "description": "CH5 Utilities CLI for archiving and distribution",
  "repository": {
    "type": "git",
    "url": "https://github.com/Crestron/CH5Utilities.git"
  },
  "main": "./build/index.js",
  "bin": {
    "ch5-shell-cli": "./build/index.js"
  },
  "types": "build/@types/index.d.ts",
  "scripts": {
    "start": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "copyfiles:json": "copyfiles -u 1 src/**/**/*.json build/",
    "copyfiles:template": "copyfiles -u 1 src/**/*.template build/",
    "copyfiles:text": "copyfiles -u 1 src/**/*.txt build/",
    "build": "tsc -p tsconfig.json && yarn copyfiles:json && yarn copyfiles:template && yarn copyfiles:text",
    "ch5-utils": "./build/index.js",
    "clean": "rimraf build",
    "create": "yarn build && yarn test",
    "publish:local": "yarn build && yarn unlink && yarn link",
    "publish:local:watch": "nodemon --watch 'src/**/*.ts' --exec 'yarn publish:local'",
    "setup:local": "yarn install && yarn link @crestron/ch5-shell-utilities-cli && yarn build && yarn link",
    "start:js": "node build/index.js",
    "start:watch": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "refresh": "rm -rf ./node_modules ./package-lock.json && npm install",
    "tsc": "tsc --declaration --declarationDir build/@types",
    "mtest": "mocha -r ts-node/register test/index.ts --timeout 15000 --reporter mochawesome",
    "test:mocha": "yarn build && nyc mocha --config=.mocharc.json"
  },
  "keywords": [
    "ch5",
    "ch5z",
    "cli"
  ],
  "author": "Crestron",
  "license": "SEE LICENSE IN LICENSE.txt",
  "dependencies": {
    "@crestron/ch5-utilities": "^0.1.21",
    "chalk": "^4.1.2",
    "commander": "^7.1.0",
    "edit-json-file": "^1.7.0",
    "enquirer": "^2.3.6",
    "find-remove": "^2.0.3",
    "fs-extra": "^9.1.0",
    "jsonschema": "^1.4.0",
    "rimraf": "^3.0.2",
    "zip-lib": "^0.7.2"
  },
  "devDependencies": {
    "@types/chai": "^4.2.15",
    "@types/fs-extra": "^9.0.9",
    "@types/mocha": "^8.2.1",
    "@types/mock-fs": "^4.13.0",
    "@types/node": "^14.14.35",
    "@types/sinon": "^10.0.2",
    "chai": "^4.3.4",
    "mocha": "^9.0.0",
    "mock-fs": "^5.0.0",
    "mock-stdin": "^1.0.0",
    "nodemon": "^2.0.7",
    "nyc": "^15.1.0",
    "sinon": "^11.1.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3",
    "typings": "^2.1.1"
  },
  "files": [
    "build/**/*",
    "LICENSE.txt",
    "readme.md"
  ],
  "nyc": {
    "exclude": "build/**/*.spec.js"
  }
}
