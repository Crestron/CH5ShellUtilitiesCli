{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es6",
      "es2015",
      "dom"
    ],
    "declaration": true,
    "outDir": "build",
    "rootDirs": [
      "src",
      "test"
    ],
    "strict": true,
    "types": [
      "node",
      "mocha"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "newLine": "LF"
  },
  "include": [
    "src/**/*",
    "src/shell/**/*",
    "src/shell/.vscode/emulator-schema.json",
    "src/shell/.vscode/project-config-schema.json",
    "src/shell/.vscode/settings.json"
  ],
  "exclude": [
    "node_modules"
  ],
  "hooks": [
    "copy-files"
  ]
}