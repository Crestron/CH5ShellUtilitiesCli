{
  "command": "generate:widget",
  "name": "generate:widget",
  "usage": "[options]",
  "options": [
    {
      "keys": "-n, --name",
      "description": "Set the name of the widget to be created"
    }
  ],
  "additionalHelp": true,
  "logger": {
    "allowLogging": true,
    "logLevel": 1
  },
  "basePathForWidgets": "./app/project/components/widgets/",
  "minLengthOfWidgetName": 2,
  "maxLengthOfWidgetName": 31,
  "templateNames": {
     "disallowed": {
       "startsWith": [
         "template"
       ],
       "equals": [
         "service",
         "translate",
         "utils"
       ]
     }
   }
}